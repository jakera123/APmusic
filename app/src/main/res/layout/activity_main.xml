<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beautiful"
    tools:context="com.zxp.apmusic.MainActivity">

    <Button
        android:id="@+id/btn_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="parent"
        android:background="@drawable/btn_play"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_previous"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/parentView"
        app:layout_constraintRight_toLeftOf="@id/btn_play"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_play"
        />
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_next"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/parentView"
        app:layout_constraintLeft_toRightOf="@id/btn_play"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_play"
         />



    <SeekBar
        android:id="@+id/sb_music_progress"
        android:layout_width="468dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_play"
         />


</android.support.constraint.ConstraintLayout>
